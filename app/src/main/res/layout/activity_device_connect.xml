<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DeviceConnectActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/blue_connect_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:paddingLeft="8dp"
        app:contentInsetStart="0dp"
        app:titleTextColor="@android:color/white" />

    <Button
        android:id="@+id/device_connect_bt_reconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新连接(最后一次连接的设备)"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="已配对设备:"
        android:textColor="#FF207505"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/device_paired_rv"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="可用设备:"
        android:textColor="#FF207505"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/device_connect_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" />
</LinearLayout>