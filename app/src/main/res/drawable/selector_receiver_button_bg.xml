<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">  <!-- 按下的状态 -->
            <solid android:color="#c3c3c3" />  <!-- 颜色填充 -->
            <stroke android:width="8dp" android:color="#c3c3c3" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle"> <!-- 不按下的状态 -->
            <solid android:color="#fff" />  <!-- 颜色填充 -->
            <stroke android:width="8dp" android:color="#fff" />
            <corners android:radius="0dp" />
        </shape>
    </item>

</selector>